<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvSelectedFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No file selected"
        android:layout_margin="16dp" />

    <ImageView
        android:id="@+id/ivSelectedImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/tvSelectedFile"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btnSelectFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select File"
        android:layout_below="@id/ivSelectedImage"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btnPrint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Print"
        android:layout_below="@id/btnSelectFile"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btnSearchDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Device"
        android:layout_below="@id/btnPrint"
        android:layout_margin="16dp" />

</RelativeLayout>
